<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:elevation="10dp"
        app:cardCornerRadius="6dp"
>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <ImageView
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:maxHeight="350dp"
                android:id="@+id/annonce_image"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        />
        <TextView
                android:text="Algeria "
                android:textSize="20sp"
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItem"
                android:layout_toRightOf="@id/annonce_image"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/annonce_image"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2095"
                android:id="@+id/price"
                android:textSize="20sp"
                android:textColor="@android:color/holo_orange_dark"
                android:layout_margin="8dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/content"
                app:layout_constraintEnd_toStartOf="@+id/textView7" android:layout_marginEnd="8dp"
        />
        <TextView
                android:text="DA"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/textView7" app:layout_constraintBaseline_toBaselineOf="@+id/price"
        />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>